<Page x:Class="MyRecipes.View.Pages.AboutDish"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyRecipes.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutDish"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="0 10 0 0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Порций: "/>
                <Button Content="-" Width="25"
                                    Margin="10 0" Click="MinusBtn_Click"/>
                <TextBox Text="1" Width="40" 
                                     TextAlignment="Center" 
                                     TextChanged="CountTextBox_TextChanged"
                                     x:Name="CountText"/>
                <Button Content="+" Width="25" 
                                    Margin="10 0" Click="PlusBtn_Click"/>
            </StackPanel>
            <TextBlock Text="{Binding CostDish, StringFormat='Общая стоимость: {0:f} руб.'}"/>
        </StackPanel>
        <ContentControl Content="{Binding DishObject}" 
                        TextBlock.FontSize="15"
                        Grid.ColumnSpan="2">
        <ContentControl.ContentTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Margin="0 10 0 0">
                        <TextBlock Text="{Binding Category.Name, StringFormat='Категория: {0}'}"/>
                        <TextBlock Text="{Binding TimeInMiutes, StringFormat='Время на приготовление: {0} мин.'}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Margin="10">
                        <TextBlock HorizontalAlignment="Center" Text="Ингредиенты:"  Margin="0 10 0 30"/>
                        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Ingredients}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Кол-во" Binding="{Binding AvailableCount}"/>
                                <DataGridTextColumn Header="Ед.изм." Binding="{Binding Unit.Name}"/>
                                <DataGridTextColumn Header="Стоимость" Binding="{Binding CostForCount}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                        <TextBlock HorizontalAlignment="Center" Text="Приготовление:" Margin="0 10 0 30"/>
                        <ScrollViewer>
                            <ItemsControl ItemsSource="{Binding CookingStage}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <WrapPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                        </WrapPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </ContentControl.ContentTemplate>
    </ContentControl>
    </Grid>
</Page>
